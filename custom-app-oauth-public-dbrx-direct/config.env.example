# Databricks Direct OAuth Configuration - Public Client
# Direct authentication with Databricks OAuth endpoints (no external IdP)
# Public client uses PKCE only (no client secret)

# Application Configuration
PORT=8003
FLASK_DEBUG=True
FLASK_SECRET_KEY=databricks-public-oauth-app-secret

# Databricks OAuth Configuration (Public Client)
DATABRICKS_SERVER_HOSTNAME=your-workspace.cloud.databricks.com
CLIENT_ID=your-databricks-public-client-id
# Note: No CLIENT_SECRET for public client
REDIRECT_URI=http://localhost:8003/callback
OAUTH_SCOPE=all-apis offline_access

# Databricks SQL Endpoint Configuration
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id

# Note: DATABRICKS_HTTP_PATH is optional - users can specify warehouse ID in the UI
