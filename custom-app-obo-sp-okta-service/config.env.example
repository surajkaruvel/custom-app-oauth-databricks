# Service Principal (M2M) Configuration - Okta Service Application
# No user authentication required - uses OAuth Client Credentials flow

# Application Configuration
PORT=7000
FLASK_DEBUG=True
FLASK_SECRET_KEY=service-principal-oauth-app-secret

# Okta Service Application Configuration (API Services type)
# Create this in Okta Admin Console -> Applications -> Create App Integration -> API Services
ISSUER_URL=https://your-okta-domain.okta.com/oauth2/your-auth-server-id
CLIENT_ID=your-service-app-client-id-here
CLIENT_SECRET=your-service-app-client-secret-here
OAUTH_SCOPE=databricks-token-federation

# Databricks SQL Endpoint Configuration
DATABRICKS_SERVER_HOSTNAME=your-workspace.cloud.databricks.com
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id

# Databricks Model Serving Configuration
MODEL_SERVING_ENDPOINT=https://your-workspace.cloud.databricks.com/serving-endpoints/your-model-name/invocations
MODEL_NAME=your-model-name
MODEL_MAX_TOKENS=256

# Note: DATABRICKS_HTTP_PATH is optional - users can specify warehouse ID in the UI

# Service Principal UUID for Databricks token exchange
SP_UUID=abcd1234-abc7-123g-123c-12345abc7890